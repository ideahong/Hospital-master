<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ming.hospital.dao.NoticeDao">

	<resultMap type="com.ming.hospital.pojo.Notice" id="NoticeResult">
		<id property="id" column="id" />
		<result property="noticeName" column="notice_name" />
		<result property="noticeDescription" column="notice_description" />
		<result property="noticeType" column="notice_type" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="isUseful" column="is_useful" />
	</resultMap>
	<!-- 查询通知 -->
	<select id="findNoticeByType" resultMap="NoticeResult">
		SELECT *  FROM notice
	</select>

	<!-- 查询通知的数量 -->
	<select id="findNoticeByTypeNum" resultType="java.lang.Integer">
		SELECT
		COUNT(*) FROM `notice`
		where is_useful = 1
	</select>
	<!-- 查询通知 -->
	<!--<select id="findNoticeById" resultType="com.ming.hospital.pojo.Notice">
		SELECT
		* FROM `notice`
		where id = #{id}
	</select>-->
	<select id="findNoticeById"  resultMap="NoticeResult">
		SELECT
		* FROM `notice`
		where id = #{id}
	</select>
	

</mapper>